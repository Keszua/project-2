{
    "compilerOptions": {
        "noImplicitAny": true,
        "preserveConstEnums": true,            
        "sourceMap": true,                     
        "target": "es6",                       
        "downlevelIteration": true,            
        "lib": ["dom", "es6", "dom.iterable"], 
        "outDir": "./dist/",                   
        "experimentalDecorators": true,         
        "emitDecoratorMetadata": true, 
        "moduleResolution": "Node",            

        "baseUrl": "./",                       
        "removeComments": true,                
    },
    "include": ["./src/**/*", "public"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}